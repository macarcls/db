<Window x:Class="Kursach.Login_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        mc:Ignorable="d"
        Title="Login_Window" Height="238" Width="250"
        ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="Login_w.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48*" />
            <RowDefinition Height="19*"/>
            <RowDefinition Height="48*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Имя" Margin="0,10,0,0" />
        <TextBlock Text="Пароль" Grid.Row="2" Margin="0,10,0,103" Grid.RowSpan="2" />

        <TextBox Text="{Binding Name}" Grid.Column="1" />
        <PasswordBox x:Name="passw" Grid.Column="1" Margin="0,19,0,0" Grid.Row="1" Grid.RowSpan="2" />

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Margin="20,29,0,0" Width="166">
            <Button Click="Button_Click_1" Content="Регистрация" Width="79" Height="35"/>
            <Button IsDefault="True" Click="Button_Click" Content="Вход" Width="38" Height="35" />
            <Button IsCancel="True" Content="Выход" Width="48" Height="35" Click="Button_Click_4" />
        </StackPanel>
    </Grid>
</Window>
