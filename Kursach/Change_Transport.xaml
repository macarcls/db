<Window x:Class="Kursach.Change_Transport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        mc:Ignorable="d"
        Title="Change_Transport" Height="450" Width="800"
        ResizeMode="CanMinimize">
    <Window.Background>
        <ImageBrush ImageSource="SPRK_default_preset_name_custom – 1.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="168*"/>
            <ColumnDefinition Width="287*"/>
            <ColumnDefinition Width="317*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="21*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,51,0,22" Grid.RowSpan="3" Text="Тип" FontSize="20" Grid.Column="1"/>
        <TextBox Text="{Binding Type}" Grid.Column="2" Margin="0,51,0,22" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <TextBlock Text="Цена" FontSize="20" Margin="0,23,0,0" Grid.RowSpan="2" Grid.Row="2" Grid.Column="1"/>
        <TextBox Text="{Binding cost}" Grid.Column="2" Margin="0,22,0,1" Grid.RowSpan="2" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBlock Text="Местоположение" FontSize="20" Margin="0,23,0,0" Grid.RowSpan="2" Grid.Row="4" Grid.Column="1"/>
        <TextBox Text="{Binding place}" Grid.Column="2" Margin="0,23,0,0" Grid.RowSpan="2" Grid.Row="4" Grid.ColumnSpan="2"/>

        <Button Content="Добавить" FontSize="20" Grid.Column="2" Margin="0,137,0,0" Grid.RowSpan="2" Grid.Row="6" Click="Button_Click"/>
        <Button Content="Закрыть" FontSize="20" Grid.Column="3" Margin="0,137,0,0" Grid.RowSpan="2" Grid.Row="6" Click="Button_Click_1" />
        <Button Margin="0,68,0,8" FontSize="20" Grid.Column="3" Grid.Row="6" Content="База данных" Click="Check_base"/>
        <Button Margin="0,68,0,8" FontSize="20" Grid.Column="2" Grid.Row="6" Content="Удалить" Click="Button_Click_2"/>
    </Grid>
</Window>
